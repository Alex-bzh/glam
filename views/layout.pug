doctype html
html(
	lang="fr"
	xmlns="http://www.w3.org/1999/xhtml"
)
	head
		meta(charset="utf-8")
		meta(
			name="viewport"
			content="width=device-width, initial-scale=1"
		)
		link(
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		)
		link(
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
		)
		title= title + " | GLAM"

	body
		div.container
			nav(
				class="navbar navbar-expand-lg navbar-light bg-light"
				role="navigation"
			)
				div.container-fluid
					a.navbar-brand(href="/")= t("GLOBAL.SITE_EXP")
					button.navbar-toggler(
						type="button"
						data-bs-toggle="collapse"
						data-bs-target="#navbarSupportedContent"
						aria-controls="navbarSupportedContent"
						aria-expanded="false"
						aria-label="Toggle navigation"
					)
						span.navbar-toggler-icon

					div(
						class="collapse navbar-collapse"
						id="navbarSupportedContent"
					)
						ul(class="navbar-nav me-auto mb-2 mb-lg-0")
							li.nav-item
								a.nav-link(href="/" id="home")= t("NAV.HOME")
							li.nav-item
								a.nav-link(href="/presentation" id="presentation")= t("NAV.PRESENTATION")
							li.nav-item
								a.nav-link(href="/collaborators" id="collaborators")= t("NAV.COLLABORATORS")
							li.nav-item
								a.nav-link(href="/contact-us" id="contact-us")= t("NAV.CONTACT-US")
							li.nav-item
								a.nav-link(href="/links" id="links")= t("NAV.LINKS")
							li.nav-item
								a.nav-link(href="/documentation" id="documentation")= t("NAV.DOCUMENTATION")

						if !connected
							ul.navbar-nav.mx-5
								li.nav-item
									a.nav-link(href="/users/login")= t("AUTH.LOGIN")
						else
							div.dropdown.mx-3
								a.dropdown-toggle#loggedIn(
									data-bs-toggle= "dropdown"
									aria-expanded= "false"
								)
									svg.bi.bi-person-circle.mx-2(
										xmlns= "http://www.w3.org/2000/svg"
										width= "16" height= "16"
										fill= "currentColor"
										viewBox= "0 0 16 16"
									)
										path(d= "M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z")
										path(
											fill-rule= "evenodd"
											d= "M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"
										)
								ul.dropdown-menu(aria-labelledby= "loggedIn")
									li
										a.dropdown-item(href= "/users/add")= t("USERS.ADD")
									li
										a.dropdown-item(href= "/docs/add")= t("DOCS.ADD")
									li
										a.dropdown-item(href= "/users/logout")= t("AUTH.LOGOUT")

						ul.navbar-nav#ulang
							li.nav-item
								a.nav-link(href="?lang=fr" id="fr")="fr"
							li.nav-item
								a.nav-link(href="?lang=en" id="en")="en"
		
			block content

		script(src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js")
		script(
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		)
		script(src="/javascripts/tools.js")
